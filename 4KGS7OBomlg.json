{
    "user" : {
        "currentInput" : "<Here comes the current input of the user>",
        "currentInputType" : "<Here comes the current input type[record, timer, play, confirm, query]>",
        "currentLocation" : "<Here comes the current location of the user>"
    },
    "timerSource" : {
        "start" : 300
    },
    "videoSource" : {
        "start" : "/here/comes/the/source.mp4"
    },
    "instructionSource" : {
        "start" : "Deep fry the potatoes for 5 minutes"
    },
    "destinationSource" : {
        "start" : [
            "1"
        ]
    },
    "start" : {
        "actions" : {
            "goto" : {
                "inputs" : [
                    {
                        "to" : "destinationSource",
                        "key" : "start"
                    }
                ],
                "perform" : "gotoInstruction"
            },
            "query" : {
                "inputs" : [
                    {
                        "to" : "user",
                        "key" : "currentInput"
                    },
                    {
                        "to" : "instructionSource",
                        "key" : "start"
                    }
                ],
                "perform" : "queryInstruction"
            },
            "record" : {
                "inputs" : [
                    {
                        "to" : "user",
                        "key" : "currentInput"
                    }
                ],
                "perform" : "recordLog"
            },
            "timer" : {
                "inputs" : [
                    {
                        "to" : "timerSource",
                        "key" : "start"
                    }
                ],
                "perform" : "startTimer"
            },
            "play" : {
                "inputs" : [
                    {
                        "to" : "videoSource",
                        "key" : "start"
                    }
                ],
                "perform" : "playVideo"
            },
            "confirm" : {
                "inputs" : [
                    {
                        "to" : "instructionSource",
                        "key" : "start"
                    },
                    {
                        "to" : "user",
                        "key" : "currentInput"
                    }
                ],
                "perform" : "confirmLog"
            }
        }
    }
}
